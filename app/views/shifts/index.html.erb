<h1>Volunteers Scheduled For Today</h1>

  <% @shifts = Shift.all %>
  <% @shifts.each do |s| %>
    <% if s.date == Date.today.to_s %>
        <strong><%= s.volunteer.name_first %> <%= s.volunteer.name_last %></strong>
        <% unless s.status == "Confirmed" %>
            <%= button_to('Confirm',
                          options = { :action => 'confirm', :params => { :sf_volunteer_shift_id => s.sf_volunteer_shift_id}})%></br>
        <% else  %>
        <%= "Confirmed!" %></br>
        <% end %>
  <% end %>
<% end %>