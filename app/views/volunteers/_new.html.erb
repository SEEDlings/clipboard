<h3>Walk-in or New Volunteer</h3>
<div class="row">
  <div class="small-11 small-centered columns">
    <% @volunteer = Volunteer.new %>
    <% @shift = Shift.new %>
    <%= form_for @volunteer, url: volunteers_sfcreate_path do |f| %>
      <div class="row">
        <div class="small-6 columns">
          <%= f.text_field :name_first, placeholder: 'First Name' %>
        </div>
        <div class="small-6 columns">
          <%= f.text_field :name_last, placeholder: 'Last Name' %>
        </div>
      </div>
      <div class="row">
        <div class="small-6 columns">
          <%= f.text_field :email, placeholder: 'Email' %>
        </div>
      <div class="row">
        <div class="small-6 columns">
          <%= form_for @shift do |f| %>      ...
              <%= f.select :shift_type, options_for_select(%w[MorningGarden AfternoonGarden DIG Chef Office/Admin]) %>
          <% end %>
        </div>
        <div class="small-6  columns">
          <%= f.submit "Submit", :class => 'button radius small' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
